{% comment %}
  Simple breadcrumb navigation for Flora Queen store
{% endcomment %}

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol class="breadcrumb-list">
    <li class="breadcrumb-item">
      <a href="{{ routes.root_url }}" class="breadcrumb-link">Home</a>
      <span class="breadcrumb-separator">›</span>
    </li>

    {% case request.page_type %}
      {% when 'collection' %}
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">{{ collection.title }}</span>
        </li>

      {% when 'product' %}
        {% if collection %}
          <li class="breadcrumb-item">
            <a href="{{ collection.url }}" class="breadcrumb-link">{{ collection.title }}</a>
            <span class="breadcrumb-separator">›</span>
          </li>
        {% else %}
          <li class="breadcrumb-item">
            <a href="{{ routes.all_products_collection_url }}" class="breadcrumb-link">Products</a>
            <span class="breadcrumb-separator">›</span>
          </li>
        {% endif %}
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">{{ product.title }}</span>
        </li>

      {% when 'blog' %}
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">{{ blog.title }}</span>
        </li>

      {% when 'article' %}
        <li class="breadcrumb-item">
          <a href="{{ blog.url }}" class="breadcrumb-link">{{ blog.title }}</a>
          <span class="breadcrumb-separator">›</span>
        </li>
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">{{ article.title }}</span>
        </li>

      {% when 'page' %}
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">{{ page.title }}</span>
        </li>

      {% when 'search' %}
        <li class="breadcrumb-item">
          <span class="breadcrumb-current">Search{% if search.terms %}: "{{ search.terms }}"{% endif %}</span>
        </li>

    {% endcase %}
  </ol>
</nav>

{% stylesheet %}
  .breadcrumbs {
    padding: 1rem 2rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }

  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.9rem;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
  }

  .breadcrumb-link {
    color: rgba(46, 93, 62, 0.7);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .breadcrumb-link:hover {
    color: #E91E63;
  }

  .breadcrumb-current {
    color: var(--color-foreground);
    font-weight: 500;
  }

  .breadcrumb-separator {
    color: rgba(46, 93, 62, 0.5);
    margin: 0 0.75rem;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .breadcrumbs {
      padding: 1rem;
    }

    .breadcrumb-list {
      font-size: 0.8rem;
    }

    .breadcrumb-separator {
      margin: 0 0.5rem;
    }
  }
{% endstylesheet %}