<header class="site-header">
  <div class="header-container">
    <!-- Logo -->
    <div class="header__logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="logo-image" width="160" height="40">
      </a>
    </div>

    <!-- Search Bar -->
    <div class="header__search">
      <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
        <button type="submit" class="search-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="11" cy="11" r="8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 21L16.65 16.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <input type="search"
               name="q"
               placeholder="A bouquet of red roses"
               value="{{ search.terms | escape }}"
               class="search-input">
      </form>
    </div>

    <!-- Right Side Actions -->
    <div class="header__actions">
      <!-- Save An Event Button -->
      <button class="save-event-btn">Save An Event</button>

      <!-- Calendar Icon -->
      <a href="#" class="header-icon calendar-icon">
        <img src="{{ 'icons-header-01 1.png' | asset_url }}" alt="Calendar" width="24" height="24">
      </a>

      <!-- Account Icon -->
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="header-icon account-icon">
          <img src="{{ 'icons-header-02 1.png' | asset_url }}" alt="Account" width="24" height="24">
          <span class="icon-label">Account</span>
        </a>
      {% endif %}

      <!-- Headset Icon (Customer Support) -->
      <a href="/pages/contact" class="header-icon support-icon">
        <img src="{{ 'headset_transparent 1.png' | asset_url }}" alt="Support" width="24" height="24">
      </a>

      <!-- Language Switcher -->
      {% render 'language-switcher' %}
    </div>
  </div>

  <!-- Navigation Menu -->
  <nav class="header__nav">
    <div class="nav-container">
      <ul class="nav-menu">
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/september-birthdays" class="nav-link">September Birthdays</a>
        </li>
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/flowers" class="nav-link">Flowers</a>
        </li>
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/plants" class="nav-link">Plants</a>
        </li>
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/gift-baskets" class="nav-link">Gift Baskets</a>
        </li>
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/personalised-gifts" class="nav-link">Personalised gifts</a>
        </li>
        <li class="nav-item">
          <a href="/pages/destinations" class="nav-link">Destinations</a>
        </li>
        <li class="nav-item">
          <a href="{{ routes.collections_url }}/corporate-gifts" class="nav-link">Corporate Gifts</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

{% stylesheet %}
  /* Reset and Base Styles */
  .site-header {
    background: #ffffff;
    border-bottom: 1px solid #e5e5e5;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .header-container {
    width: 100%;
    padding: 15px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
  }

  /* Logo Styles */
  .header__logo {
    flex-shrink: 0;
  }

  .logo-image {
    height: 40px;
    width: auto;
  }

  /* Search Bar Styles */
  .header__search {
    width: 517px;
    flex-shrink: 0;
  }

  .search-form {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
  }

  .search-input {
    width: 100%;
    padding: 12px 20px 12px 45px;
    border: 1px solid #ED600F;
    font-size: 14px;
    color: #333;
    background: #ffffff;
    outline: none;
    transition: border-color 0.3s ease;
  }

  .search-input:focus {
    border-color: #ED600F;
    box-shadow: 0 0 0 2px rgba(237, 96, 15, 0.1);
  }

  .search-input::placeholder {
    color: #999;
  }

  .search-button {
    position: absolute;
    left: 15px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    z-index: 1;
  }

  .search-button:hover {
    color: #ED600F;
  }

  /* Header Actions Styles */
  .header__actions {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  /* Save An Event Button */
  .save-event-btn {
    background: #FF6B35;
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: 5px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  .save-event-btn:hover {
    background: #FF5722;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
  }

  /* Header Icons */
  .header-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    position: relative;
  }

  .header-icon:hover {
    background-color: #f5f5f5;
  }

  .header-icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }


  .account-icon {
    flex-direction: column;
    gap: 2px;
    width: auto;
    padding: 0 10px;
  }

  .icon-label {
    font-size: 11px;
    color: #FF6B35;
    font-weight: 500;
  }


  /* Navigation Menu */
  .header__nav {
    background: #ffffff;
    border-top: 1px solid #f0f0f0;
    width: 100%;
  }

  .nav-container {
    width: 100%;
    padding: 0;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 40px;
    justify-content: center;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: block;
    padding: 15px 0;
    color: #333;
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #7C4DFF;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: #7C4DFF;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .header-container {
      flex-wrap: wrap;
    }

    .header__search {
      order: 3;
      flex-basis: 100%;
      max-width: 100%;
      margin-top: 10px;
    }

    .nav-menu {
      gap: 20px;
      overflow-x: auto;
      padding: 0 10px;
    }

    .nav-item {
      white-space: nowrap;
    }
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 10px 15px;
    }

    .logo-image {
      height: 30px;
    }

    .save-event-btn {
      padding: 8px 16px;
      font-size: 12px;
    }

    .header__actions {
      gap: 10px;
    }

    .header-icon {
      width: 35px;
      height: 35px;
    }

    .icon-label {
      display: none;
    }

    .nav-menu {
      font-size: 14px;
      gap: 15px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_save_event",
      "label": "Show Save An Event Button",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_support",
      "label": "Show Customer Support",
      "default": true
    },
    {
      "type": "select",
      "id": "currency_display",
      "label": "Currency Display",
      "options": [
        {
          "value": "gb",
          "label": "GB (£)"
        },
        {
          "value": "us",
          "label": "US ($)"
        },
        {
          "value": "eu",
          "label": "EU (€)"
        }
      ],
      "default": "gb"
    }
  ]
}
{% endschema %}