<header>
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <div class="header__menu">
    {% if section.settings.menu != blank %}
      {% for link in section.settings.menu.links %}
        {{ link.title | link_to: link.url }}
      {% endfor %}
    {% else %}
      <!-- Default Flora Queen Navigation -->
      {{ 'Home' | link_to: routes.root_url }}
    {% endif %}
  </div>

  <div class="header__icons">
    {% render 'language-switcher' %}

    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2rem;
    background: var(--color-background);
    border-bottom: 1px solid rgba(46, 93, 62, 0.1);
  }

  .header__title h2 {
    margin: 0;
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--color-foreground);
  }

  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  header a:hover {
    color: #E91E63;
  }

  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
    background: #E91E63;
    color: white;
    border-radius: 50%;
    width: 1.2rem;
    height: 1.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    top: -0.5rem;
  }

  header svg {
    width: 2rem;
    fill: var(--color-foreground);
    transition: fill 0.3s ease;
  }

  header a:hover svg {
    fill: #E91E63;
  }

  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .header__menu a {
    padding: 0.5rem 0;
    position: relative;
  }

  .header__menu a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #E91E63;
    transition: width 0.3s ease;
  }

  .header__menu a:hover::after {
    width: 100%;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
